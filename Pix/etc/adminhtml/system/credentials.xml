<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="openpix_credentials" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Credentials</label>

        <field id="oneclick_configuration_button" translate="label" type="button" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Authenticate on the platform using 1 click</label>
            <comment model="OpenPix\Pix\Model\OneclickConfigButtonComment" />
            <frontend_model>OpenPix\Pix\Block\System\Config\OneclickButton</frontend_model>
        </field>

        <field id="app_ID" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>App ID</label>
            <config_path>payment/openpix_pix/app_ID</config_path>
        </field>

        <field id="webhook_status" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Webhook Status</label>
            <config_path>payment/openpix_pix/webhook_status</config_path>
        </field>
    </group>
</include>
