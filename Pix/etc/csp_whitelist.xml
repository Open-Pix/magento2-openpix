<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="openpix" type="host">*.openpix.com.br</value>
                <value id="openpix-dev" type="host">*.openpix.dev</value>

                <!-- sentry plugin js -->
                <value id="openpix-sentry" type="host">*.sentry.io</value>
                <value id="openpix-sentry-plugin" type="host">*.ingest.sentry.io</value>

                <!-- staging -->
                <value id="openpix-dev-api" type="host">https://api.openpix.dev</value>
                <value id="openpix-dev-graphql" type="host">https://graphql.openpix.dev/openpix/graphql</value>
                <value id="openpix-dev-shopper" type="host">https://graphql.openpix.dev/shopper/graphql</value>

                <!-- prod -->
                <value id="openpix-prod-graphql" type="host">https://api.openpix.com.br/openpix/graphql</value>
                <value id="openpix-prod-shopper" type="host">https://api.openpix.com.br/shopper/graphql</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
