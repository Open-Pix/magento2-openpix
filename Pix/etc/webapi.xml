<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route method="GET" url="/V1/openpix-pix/version">
        <service class="OpenPix\Pix\Api\OpenPixWebhookInterface" method="getVersion"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route method="POST" url="/V1/openpix-pix/webhook">
        <service class="OpenPix\Pix\Api\OpenPixWebhookInterface" method="processWebhook"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
