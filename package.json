{
  "name": "magento2-openpix",
  "version": "1.0.0",
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "^2.2.1",
    "@prettier/plugin-php": "^0.16.2"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "*.yml": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.php": [
      "prettier --write"
    ]
  },
  "scripts": {
    "es": "node -r esbuild-register",
    "prepare": "husky install",
    "prettier": "prettier --write",
    "release:major": "yarn es ./scripts/changelog --major",
    "release:minor": "yarn es ./scripts/changelog --minor",
    "release:patch": "yarn es ./scripts/changelog --patch"
  }
}
